{
  "manifest_version": 3,
  "name": "Smart Resume Assistant",
  "version": "1.0.0",
  "description": "AI-powered assistant to tailor resumes and generate cover letters based on job postings.",
  
  "permissions": [
    "activeTab",
    "scripting",
    "storage"   
  ],

  "host_permissions": [
    "https://cdnjs.cloudflare.com/*",
    "<all_urls>"         
  ],

  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon16.png"
    }
  },

  "background": {
    "service_worker": "background.js"
  },

  "icons": {
    "16": "icons/icon16.png"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["pdf.worker.min.mjs"],
      "matches": ["<all_urls>"]
    }
  ],

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
